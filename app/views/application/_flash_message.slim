- if flash[:notice].present?
  .the-flash.alert.alert-success.page-header[role="alert"]
    a.close href="#" data-dismiss="alert" aria-label="close" &times;
    = flash[:notice]
- elsif flash[:error].present?
  .the-flash.alert.alert-danger.page-header[role="alert"]
    a.close href="#" data-dismiss="alert" aria-label="close" &times;
    = flash[:error]

